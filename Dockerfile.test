FROM node:20-slim

# Install dependencies
RUN apt-get update && apt-get install -y \
    git \
    curl \
    jq \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code
RUN npm install -g @anthropic-ai/claude-code

# Create test user (Claude Code doesn't like running as root)
RUN useradd -m -s /bin/bash testuser

# Copy marketplace files
COPY --chown=testuser:testuser . /home/testuser/marketplace

USER testuser
WORKDIR /home/testuser

# Set up Claude config directory
RUN mkdir -p /home/testuser/.claude

# Default command: validate plugins
CMD ["bash", "-c", "\
    echo '=== Plugin Validation ===' && \
    cd /home/testuser/marketplace && \
    echo '' && \
    echo '--- fs-dev plugin ---' && \
    claude plugin validate . 2>&1 && \
    echo '' && \
    echo '--- contextd plugin ---' && \
    claude plugin validate ./plugins/contextd 2>&1 && \
    echo '' && \
    echo '--- fs-design plugin ---' && \
    claude plugin validate ./plugins/fs-design 2>&1 && \
    echo '' && \
    echo '=== Loading Plugins (dry run) ===' && \
    echo 'Testing plugin loading with --plugin-dir...' && \
    claude --plugin-dir /home/testuser/marketplace --plugin-dir /home/testuser/marketplace/plugins/contextd --plugin-dir /home/testuser/marketplace/plugins/fs-design --version 2>&1 && \
    echo '' && \
    echo '=== All Tests Passed ===' \
"]
